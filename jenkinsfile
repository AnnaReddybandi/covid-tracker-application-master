pipeline {
    agent any

    environment {
        RESTAPI = 'covid-tracker-application-master'
        DOCKERFILE_BRANCH = 'main'
        DOCKER_HUB_REGISTRY = 'docker.io'
        DOCKER_IMAGE_NAME = 'annareddy/t1-project'
        IMAGE_TAG = 'vigridtest'
        SONAR_SERVER_URL = 'http://13.52.74.172:9000/'
        SONAR_LOGIN = 'squ_ce7aea3c209111cb93109150676fa7ee694c3ac3'
        KUBECONFIG_PATH = '/home/ubuntu/.kube/config' // Path to kubeconfig on Jenkins agent
    }

    tools {
        maven 'Maven-3.8.4'
        jdk 'jdk-path'  // Replace with your configured JDK in Jenkins
    }

    stages {
        stage('SCM Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/AnnaReddybandi/covid-tracker-application-master.git'
            }
        }

        stage('Build') {
            steps {
                script {
                    // Maven build
                    sh 'mvn clean package'

                    // Build Docker image
                    withCredentials([usernamePassword(credentialsId: 'docker-credentials', passwordVariable: 'DOCKER_HUB_PASSWORD', usernameVariable: 'DOCKER_HUB_USER')]) {
                        sh "docker build -t ${DOCKER_HUB_REGISTRY}/${DOCKER_HUB_USER}/${DOCKER_IMAGE_NAME}:${IMAGE_TAG} ."
                    }
                }
            }
        }

        stage('Push to DockerHub') {
            steps {
                script {
                    withCredentials([usernamePassword(credentialsId: 'docker-credentials', passwordVariable: 'DOCKER_HUB_PASSWORD', usernameVariable: 'DOCKER_HUB_USER')]) {
                        sh "docker login -u ${DOCKER_HUB_USER} -p ${DOCKER_HUB_PASSWORD}"
                        sh "docker push ${DOCKER_HUB_REGISTRY}/${DOCKER_HUB_USER}/${DOCKER_IMAGE_NAME}:${IMAGE_TAG}"
                    }
                }
            }
        }

        stage('Code Analysis') {
            environment {
                scannerHome = tool 'sonarqube'
            }
            steps {
                script {
                    sh "${scannerHome}/bin/sonar-scanner \
                        -Dsonar.projectKey=CovidTracker \
                        -Dsonar.projectName=CovidTracker \
                        -Dsonar.sources=. \
                        -Dsonar.java.binaries=target/classes \
                        -Dsonar.host.url=${SONAR_SERVER_URL} \
                        -Dsonar.login=${SONAR_LOGIN}"
                }
            }
        }

        stage('Deploy to Kubernetes (EKS)') {
            steps {
                script {
                    // Apply Deployment and Service YAML
                    sh "kubectl apply -f deployment-service.yml --kubeconfig=${KUBECONFIG_PATH}"

                    // Optional: Wait until the Deployment is ready
                    sh "kubectl rollout status deployment/devops --kubeconfig=${KUBECONFIG_PATH}"
                }
            }
        }
    }

    post {
        success {
            echo "Pipeline completed successfully!"
        }
        failure {
            echo "Pipeline failed. Check logs for details."
        }
    }
}
